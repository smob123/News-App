<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">#33000000</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:textAppearance">@style/CollapsingToolbar</item>
    </style>

    <!-- Hamburger menu bar color -->
    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>

    <!-- Collapsing toolbar theme -->
    <style name="CollapsingToolbar" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">40sp</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
